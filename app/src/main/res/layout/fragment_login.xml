        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingRight="32dp"
        android:paddingLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"/>

</LinearLayout>